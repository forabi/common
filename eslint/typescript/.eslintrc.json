{
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["typescript"],
  "rules": {
    "typescript/no-unused-vars": ["error"],
    "no-undefined": ["off"],
    "no-undef": ["off"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx", ".js", ".jsx"]
      }
    }
  }
}
