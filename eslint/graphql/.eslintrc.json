{
  "plugins": ["graphql"],
  "rules": {
    "graphql/template-strings": [
      "error",
      {
        "env": "literal",
        "validators": "all",
        "projectName": "app"
      }
    ],
    "graphql/no-deprecated-fields": [
      "error",
      {
        "env": "literal",
        "projectName": "app"
      }
    ],
    "graphql/capitalized-type-name": [
      "error",
      {
        "env": "literal",
        "projectName": "app"
      }
    ],
    "graphql/named-operations": [
      "error",
      {
        "env": "literal",
        "projectName": "app"
      }
    ]
  }
}
