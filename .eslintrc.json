{
  "extends": [
    "airbnb/base",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "graphql"
  ],
  "rules": {
    "max-len": ["error", 120],
    "max-depth": ["error", 4],
    "graphql/template-strings": [
      "error",
      {
        "env": "literal",
        "validators": "all"
      }
    ],
    "graphql/no-deprecated-fields": [
      "error",
      {
        "env": "literal"
      }
    ],
    "graphql/capitalized-type-name": [
      "error",
      {
        "env": "literal"
      }
    ],
    "graphql/named-operations": [
      "error",
      {
        "env": "literal"
      }
    ]
  }
}